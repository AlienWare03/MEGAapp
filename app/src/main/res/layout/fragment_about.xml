<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectmega.menu.AboutFragment"
    android:background="#0288D1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   
    <ImageView
        android:background="@drawable/megalogosmaller"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:padding="16dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="  “MEGA or MICRO-CONTROLLER BASED EXAMINER and GRADE ASSESSOR” is an innovative way by which exams are created, taken, checked, and analyzed. It is composed of three parts; the device itself, a PC software, and this Android application internetworked together. This is developed for students to update them on their scores and grades in different subjects." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="App developed by: Justin J. Buenaventura"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: buenaventura.justin11@gmail.com "
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>
</FrameLayout>
